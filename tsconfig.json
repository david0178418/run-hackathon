{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"checkJs": true,
		"baseUrl": "./",
		"outDir": "./build/",
		"declaration": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"target": "ES2020",
		"jsx": "react",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2019",
			"dom"
		],
		"paths": {
			"@common/*": ["./src/common/*"],
			"@components/*": ["./src/components/*"],
			"@pages/*": ["./src/pages/*"],
			"@/*": ["./src/*"]
		}
	},
	"compileOnSave": false,
	"include": [
		"src"
	]
}
